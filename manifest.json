{
  "manifest_version": 3,
  "name": "Youtube AI summarizer",
  "version": "1.0",
  "author": "Dexter Zhang",
  "description": "paste link here and it will return a summary",
  "permissions": [
    "activeTab",
    "storage",
    "offscreen",
    "scripting",
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "https://groq-summarizer-730135335149.us-central1.run.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "frontend/assets/logov2.png",
    "default_popup": "frontend/index.html",
    "default_title": "AI youtube summarizer"
  }
}
